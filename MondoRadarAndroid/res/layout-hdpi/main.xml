<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    >
    <com.google.android.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="480px"
        android:layout_height="480px"
        android:maxWidth="480px"
        android:maxHeight="480px"
        android:enabled="true"
        android:apiKey="@string/googlemapsapikey"
        android:layout_marginTop="71px"
    	/>
    <ImageView
	    android:layout_width="480px"
	    android:layout_height="480px"
	    android:id="@+id/radar_spin"
	    android:src="@drawable/radar_spin"
		android:layout_gravity="center"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
	    android:layout_marginTop="71px"
    	/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    android:src="@drawable/radar"
	    android:id="@+id/radar"
	    android:layout_alignParentTop="true"
    	/>
    <ImageView
	    android:layout_width="480px"
	    android:layout_height="480px"
	    android:id="@+id/compass"
	    android:src="@drawable/spider_arrow"
		android:layout_gravity="center"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
	    android:layout_marginTop="71px"
    	/>
   	<SeekBar 
   		android:id="@+id/seekbar_zoom"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:padding="20sp" 
	    android:progressDrawable="@drawable/seek_background"
	    android:layout_marginBottom="130dip"
	    android:layout_marginLeft="30px"
	    android:layout_marginRight="30px"
	    
	    android:layout_alignParentBottom="true"
	    android:thumb="@drawable/thumb"
	    /> 
	    <!-- android:layout_marginTop="330dip" -->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:background="@drawable/news_button"
	    android:id="@+id/news_button"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="590px"
	    android:layout_marginLeft="165dip"
    	/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:background="@drawable/info_button"  android:id="@+id/info_button"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="590px"
	    android:layout_marginLeft="238dip"
    	/>
    	
	<TextView  
	    android:layout_height="wrap_content" 
	    android:layout_alignParentBottom="true"
   		android:layout_marginBottom="45dip"
   		android:layout_width="fill_parent"
   	
   		android:textColor="@color/text_grey"
   		android:gravity="center_horizontal"
   		android:textSize="15dip"
    	android:id="@+id/status_textview"
	    android:text="status     :: :: :: ::     sleeping"
	    />
	 <TextView  
	    android:layout_height="wrap_content" 
	    android:layout_alignParentBottom="true"
   		android:layout_marginBottom="23dip"
   		android:layout_width="fill_parent"
   		android:gravity="center_horizontal"
   		android:textSize="15dip"
   		android:textColor="@color/text_grey"
    	android:id="@+id/m_dis"
	    android:text="distance     :: :: :: ::     unkown/nactive spider hunter   :: ::  6"
	    />
	<TextView  
	    android:layout_height="wrap_content" 
	    android:layout_alignParentTop="true"
   		android:layout_marginTop="371dip"
   		android:layout_width="fill_parent"
   		android:gravity="center_horizontal"
   		android:textSize="15dip"
   		android:textStyle="bold"
    	android:id="@+id/proximity_textview"
	    android:text=""
	    />
	<include layout="@layout/slidingdrawer" />
</RelativeLayout>
